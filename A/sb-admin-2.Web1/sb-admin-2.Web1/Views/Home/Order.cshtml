<script>
    function DescriptionWideMakeEditable() {
        //alert('Yep');
        document.getElementById("pDescriptionWide").contentEditable = true;
        document.getElementById("buttonDescriptionWide").style = "display: normal";
    };

    function DescriptionWideSave() {
        document.getElementById("pDescriptionWide").contentEditable = false;
        document.getElementById("buttonDescriptionWide").style = "display: none";

        $.ajax({
            type: 'POST',
            url: '@Url.Action("UpdateDescriptionWide", "Home")',
            dataType: 'json',
            data: { val: document.getElementById("pDescriptionWide").innerText },
            success: function (data) {

            },
            error: function () {
                alert('error');
            }
        });
    };

    function KeysMakeEditable() {
        //alert('Yep');
        document.getElementById("pKeys").contentEditable = true;
        document.getElementById("buttonKeys").style = "display: normal";
    };

    function KeysSave() {
        document.getElementById("pKeys").contentEditable = false;
        document.getElementById("buttonKeys").style = "display: none";

        $.ajax({
            type: 'POST',
            url: '@Url.Action("UpdateKeys", "Home")',
            dataType: 'json',
            data: { val: document.getElementById("pKeys").innerText },
            success: function (data) {

            },
            error: function () {
                alert('error');
            }
        });
    };

    $(document).ready(function () {
        $('#tableInvoice').DataTable({
            initComplete: function () {
                this.api().columns([1, 2, 3, 4, 5, 6, 7, 8]).every(function () {

                    var column = this;
                    var select = $('<select><option value=""></option></select>')
                        .appendTo($(column.footer()).empty())
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex(
                                $(this).val()
                            );

                            column
                                .search(val ? '^' + val + '$' : '', true, false)
                                .draw();
                        });
                    column.data().unique().sort().each(function (d, j) {
                        select.append('<option value="' + d + '">' + d + '</option>')
                    });
                });
            }
        });
    });

    function InputStatusClear(id) {
        $(id).removeClass("has-success").removeClass("has-error");
    }

    function InputStatusClearAll() {
        InputStatusClear('#divQuickParse');

        $('#inputQuickParse').val('');
        $('#inputCompany').val('');
        $('#inputFrom').val('');
        $('#inputTo').val('');
        $('#inputDate').val('');
        $('#inputDateBack').val('');
        document.getElementById("radioOneWay").checked = true;
        UpdateTripTypeRadioButton();
        $('#selectStatusAvia').val('offer').change();
        document.getElementById("newaviaticketlabel").innerText = "New avia ticket";
    }

    function myDemo() {
        InputStatusClear('#divQuickParse');
        if (document.getElementById("inputQuickParse").value == "125")
            $('#divQuickParse').addClass("has-success");
        else
            $('#divQuickParse').addClass("has-error");
    };

    function UpdateTripTypeRadioButton()
    {
        if (document.getElementById("radioRoundTrip").checked)
        {
            $('#divDate').removeClass('col-lg-12').addClass('col-lg-6');
            document.getElementById("divDateBack").style = "display: normal";
        }
        if (document.getElementById("radioOneWay").checked)
        {
            $('#divDate').removeClass('col-lg-6').addClass('col-lg-12');
            document.getElementById("divDateBack").style = "display: none";
        }
    }

    $(function () {
        $('#btnSave').click(function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SaveButtonAvia", "Home")',
                dataType: 'json',
                data: {
                    A: document.getElementById("selectStatusAvia").value,
                    B: document.getElementById("inputFrom").value
                },
                success: function (data) {
                    $('#newaviaticket').modal('toggle');
                },
                error: function () {
                    alert('error');
                }
            });
        });
    });

    function FillAviaTicket(id)
    {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("FindIncoice", "Home")',
            dataType: 'json',
            data: { id: id },
            success: function (data) {
                if (data != null)
                {
                    if (data.Service == "Avia ticket")
                    {
                        document.getElementById("newaviaticketlabel").innerText = "Edit avia ticket";
                        document.getElementById("inputCompany").value = data.ServiceProvider;
                        document.getElementById("inputFrom").value = data.StartPoint;
                        document.getElementById("inputTo").value = data.FinalDestination;
                        document.getElementById("inputDate").value = data.DepartureStr;
                        if (data.IsRoundTrip == true)
                        {
                            document.getElementById("radioRoundTrip").checked = true;
                            document.getElementById("inputDateBack").value = data.DepartureBackStr;
                        }
                        else
                        {
                            document.getElementById("radioOneWay").checked = true;
                        }
                        UpdateTripTypeRadioButton();

                        switch(data.Status)
                        {
                            case "Offer":
                                $('#selectStatusAvia').val('offer').change();
                                break;
                            case "Booked":
                                $('#selectStatusAvia').val('booked').change();
                                break;
                            case "Sold":
                                $('#selectStatusAvia').val('sold').change();
                                break;
                            case "Void":
                                $('#selectStatusAvia').val('void').change();
                                break;
                        }
                    }
                }
            },
            error: function () {
                alert('error');
            }
        });
    }
</script>

