@model sb_admin_2.Web1.Domain.OrderData

@{
    ViewBag.Title = "Order";
}

<script>
    $(document).ready(function () {
        $('#dataTables-exampleA').DataTable({
            responsive: true
        });
    });

    $(document).ready(function () {
        $('#dataTables-exampleB').DataTable({
            responsive: true
        });
    });
</script>

<div class="row">
    <h2>Order</h2>
</div>

<div class="row">
    <div class="col-lg-10">
        <input class="form-control">
    </div>
    <div class="col-lg-1">
        <button type="button" class="btn btn-default">Search</button>
    </div>
    <div class="col-lg-1">
        <button type="button" class="btn btn-default">Add</button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div>
            <label>Description</label>
        </div>
        <div>
            <h5>
                @Html.DisplayFor(model => model.Order.DescriptionWide)
            </h5>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Persons
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-exampleA">
                        <thead>
                            <tr>
                                <th>First name</th>
                                <th>Second name</th>
                                <th>Gender</th>
                                <th>Organization</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PersonList)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.DisplayFor(model => item.FirstName)</td>
                                    <td>@Html.DisplayFor(model => item.SecondName)</td>
                                    <td>@Html.DisplayFor(model => item.Gender)</td>
                                    <td>@Html.DisplayFor(model => item.Organization)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <button type="button" class="btn btn-default">Add</button>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Invoice
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-exampleB">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.InvoiceList)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.DisplayFor(model => item.Description)</td>
                                    <td>@Html.DisplayFor(model => item.Status)</td>
                                    <td>@Html.DisplayFor(model => item.Amount.ValStr)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <button type="button" class="btn btn-default">Add</button>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <h3>
        Activity
    </h3>
</div>

@foreach (var item in Model.ActionList)
{
    <div class="row">
        <div class="col-lg-12">
            @if (item.Status == sb_admin_2.Web1.Models.ActionHistory.ActionHistoryStatus.green)
            {
                <div class="panel panel-green">
                    <div class="panel-heading">
                        @Html.DisplayFor(model => item.Person.FullName)
                    </div>
                    <div class="panel-body">
                        <p>@Html.DisplayFor(model => item.Content)</p>
                    </div>
                    <div class="panel-footer">
                        @Html.DisplayFor(model => item.Created)
                    </div>
                </div>
            }
            else if (item.Status == sb_admin_2.Web1.Models.ActionHistory.ActionHistoryStatus.red)
            {
                <div class="panel panel-red">
                    <div class="panel-heading">
                        @Html.DisplayFor(model => item.Person.FullName)
                    </div>
                    <div class="panel-body">
                        <p>@Html.DisplayFor(model => item.Content)</p>
                    </div>
                    <div class="panel-footer">
                        @Html.DisplayFor(model => item.Created)
                    </div>
                </div>
            }
            else if (item.Status == sb_admin_2.Web1.Models.ActionHistory.ActionHistoryStatus.yellow)
            {
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        @Html.DisplayFor(model => item.Person.FullName)
                    </div>
                    <div class="panel-body">
                        <p>@Html.DisplayFor(model => item.Content)</p>
                    </div>
                    <div class="panel-footer">
                        @Html.DisplayFor(model => item.Created)
                    </div>
                </div>
            }
        </div>
    </div>
}
